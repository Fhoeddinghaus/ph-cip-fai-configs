#!/bin/bash

error=0; trap 'error=$(($?>$error?$?:$error))' ERR # save maximum error code

#####################################################################
# Create guest account on clients with custom password

name="guest"
pass="Mo7u61Oug6SLE"	# hash function of password generated by crypt

$ROOTCMD useradd -p "$pass" -g cip -m -s /bin/bash -c "Temporary guest account, please save your data onto external media" "$name"

exit $error
