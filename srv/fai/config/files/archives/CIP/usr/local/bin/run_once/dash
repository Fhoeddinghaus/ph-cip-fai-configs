#!/bin/bash

# Set default dash applications

gsettings set org.gnome.shell favorite-apps "['org.gnome.Nautilus.desktop', 'libreoffice-writer.desktop', 'libreoffice-calc.desktop', 'firefox.desktop', 'google-chrome.desktop', 'chromium-browser.desktop', 'gnome-terminal.desktop', 'julia.desktop', 'jupyter.desktop']" &> /dev/null
gsettings set org.gnome.shell.extensions.dash-to-dock dash-max-icon-size "22" &> /dev/null
gsettings set org.gnome.shell.extensions.dash-to-dock dock-position 'BOTTOM' &> /dev/null
gsettings set org.gnome.shell.extensions.dash-to-dock running-indicator-style 'SEGMENTED ' &> /dev/null
gsettings set org.gnome.shell.extensions.dash-to-dock show-apps-at-top true &> /dev/null


exit 0
